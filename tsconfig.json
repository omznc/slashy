{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "dist/",
        "rootDir": "src/",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "target": "es2020",
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "lib": [
            "es2020"
        ],
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "module": "esnext",
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "ts-node": {
            "esm": true
        }
    }
}
